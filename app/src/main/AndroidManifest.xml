<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="list.umorili.android.com.umorili">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application

        android:allowBackup="true"
        android:icon="@mipmap/bash_icon"
        android:supportsRtl="true"
        android:name=".UmoriliAplication"
        android:label="Bash.im"
        android:theme="@style/AppTheme"
        >

        <activity android:name=".MainActivity_" android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".SettingActivity_"
            android:theme="@style/AppThemeForCheckBox"
            android:label="@string/setting_menu"
            android:parentActivityName=".MainActivity_">

        </activity>

        <activity android:name="list.umorili.android.com.umorili.SplashActivity_"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

</manifest>